@page "/searchresults"
@using Chirp.Core
@model Chirp.Web.Pages.SearchResultsModel
@{
ViewData["Title"] = "Search Results";
Layout = "Shared/_Layout";
var AuthorName = User.FindFirst("Name")?.Value ?? "User";
@inject SignInManager<Author> SignInManager

}

<h2>Search Results</h2>

@if (Model.Authors.Any())
{
<ul>
    @foreach (var author in Model.Authors)
    {
    <li>
        <strong>
            <a href="/@author.Name">@author.Name</a>

        </strong>
        @if (SignInManager.IsSignedIn(User) && AuthorName != author.Name)
        {
            @if (Model.followedAuthors.Any(a => a.Name == author.Name))
            {
                <form method="Post" asp-page-handler="Unfollow" asp-route-followAuthorName="@author.Name" style="display:inline;">
                    <button type="submit"style="padding: 2px 5px; height: 18px; width: auto;">Unfollow</button>
                </form>
            }
            else
            {
                <form method="Post" asp-page-handler="Follow" asp-route-followAuthorName="@author.Name" style="display:inline;">
                    <button type="submit"style="padding: 2px 5px; height: 18px; width: auto;">Follow</button>
                </form>
            }
        }
    </li>
    }
</ul>
}
else
{
    <em>No authors found matching your search.</em>
    
    <h3>Search Again</h3>
    <form method="get" asp-page-handler="OnGet" class="search-box">
        <input type="text" name="searchWord" placeholder="Search authors..." value="@Model.SearchWord" />
        <button type="submit">Search</button>
    </form>
}
