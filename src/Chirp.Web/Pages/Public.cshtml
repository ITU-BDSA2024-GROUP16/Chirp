@page "/"
@using Chirp.Core
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.CodeAnalysis.Scripting
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var authorName = User.FindFirst("Name")?.Value ?? "User";
    @inject SignInManager<Author> SignInManager
}

<div>
    <div style="padding-top: 8px">
        <h2 style="float: left"> Public Timeline </h2>
        <form method="get" action="/SearchResults" style="float: right">
            <input type="text" name="searchWord" placeholder="Search authors..." style="padding: 5px;"/>
            <button type="submit" style="padding: 6px; padding-left: 12px; padding-right: 12px; border-radius: 3px;">Search</button>
        </form>
    </div>

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="cheepbox" style="position: relative; display: inline-block; width: 98.2%; vertical-align: top;">
            <h3>What's on your mind @authorName?</h3>
            <form method="post">
                <input style="float: left; width: 100%; resize: none; padding: 5px; box-sizing: border-box; overflow: hidden;" type="text" asp-for="Text" maxlength="160" oninput="updateCharCount(this)">
                <span id="charCount" style="position: absolute; bottom: 8px; right: 85px; font-size: 0.85rem; color: gray;">0/160</span>
                <input style="float: right; vertical-align: top; padding: 2px; border-radius: 3px;" type="submit" value="Share">
            </form>
        </div>
    }
    else
    {
        <div style="padding-top: 40px"></div>
    }
    

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p class="cheep">
                        <div>
                            <strong style="padding-right: 10px">
                                <a href="/@cheep.AuthorDTO">@cheep.AuthorDTO</a>
                            </strong>
                            @if (SignInManager.IsSignedIn(User) && authorName.ToString() != @cheep.AuthorDTO)
                            {
                                @if (Model.followedAuthors.Any(a => a.Name == cheep.AuthorDTO))
                                {
                                    <form method="Post" asp-page-handler="Unfollow" asp-route-followAuthorName="@cheep.AuthorDTO" style="display:inline;">
                                        <button type="submit" style="padding: 2px; padding-left: 10px; padding-right: 10px; border-radius: 3px;">Unfollow</button>
                                    </form>
                                }
                                else
                                {
                                    <form method="Post" asp-page-handler="Follow" asp-route-followAuthorName="@cheep.AuthorDTO" style="display:inline;">
                                        <button type="submit" style="padding: 2px; padding-left: 10px; padding-right: 10px; border-radius: 3px;">Follow</button>
                                    </form>
                                }
                            }
                        </div>
                        @cheep.Text
                        <br/>
                        <small>&mdash; @cheep.TimeStamp</small>

                    </p>
                </li>
            }
        </ul>
        <div class="pagination">
            @if (Model.PageNumber > 1)
            {
                <a href="?page=@(Model.PageNumber - 1)" class="previous">Previous</a>
            }

            <span>Page @Model.PageNumber</span>

            @if (Model.Cheeps.Count == Model.PageSize)
            {
                <a href="?page=@(Model.PageNumber + 1)" class="next">Next</a>
            }
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

@section Scripts{
    <script>
        function updateCharCount(element) {
            const charCounter = element.value.length;

            // Update the character count display
            document.getElementById('charCount').textContent = charCounter + "/160";

            // Auto-resize only if it's a textarea
            if (element.tagName.toLowerCase() === 'textarea') {
                element.style.height = 'auto';
                element.style.height = element.scrollHeight + 'px';
            }
        }
    </script>
}
